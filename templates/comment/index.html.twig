{% extends 'baseBack.html.twig' %}

{% block title %}Gestion des Commentaires{% endblock %}

{% block content %}
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Gestion des Commentaires</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="{{ path('app_comment') }}">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Comment</a>
                </li>
            </ul>
        </div>

        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h4 class="card-title">Liste des Commentaires</h4>
                
            </div>

            <div class="table-responsive">
                <table id="add-row"class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Utilisateur</th>
                            <th>Article</th>
                            <th>Commentaire</th>
                            <th>Date</th>
                                                        <th>Rating</th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for comment in comments %}
                            <tr>
                                <td>{{ comment.id }}</td>
                                <td>{{ comment.user.name ?? 'Utilisateur anonyme' }}</td>
                                <td>{{ comment.article.titre }}</td>
                                <td>{{ comment.contenuComment|slice(0, 30) ~ '...' }}</td>
                                <td>{{ comment.dateCom|date('Y-m-d H:i') }}</td>
                                                                <td>{{ comment.rating}}</td>

                                <td class="text-center">
                                    <div class="d-flex gap-2">
                                        <!-- Bouton Modifier -->
                                       

                                        <!-- Bouton Supprimer -->
                                      <form action="{{ path('delete_comment', {'id': comment.id}) }}" >
            <button type="submit"
                    class="btn btn-link btn-danger"
                    
            >
                <i class="fa fa-times"></i>
            </button>
        </form>

                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">Aucun commentaire trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
 <h4>Statistiques des commentaires par article</h4>

<div style="width: 300px; height: 300px; margin: 0 auto;">
    <canvas id="commentDonutChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var ctx = document.getElementById('commentDonutChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: {{ articleNames|json_encode()|raw }},
                datasets: [{
                    label: 'Nombre de commentaires',
                    data: {{ commentCounts|json_encode()|raw }},
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.6)',
                        'rgba(255, 206, 86, 0.6)',
                        'rgba(75, 192, 192, 0.6)',
                        'rgba(153, 102, 255, 0.6)',
                        'rgba(255, 99, 132, 0.6)',
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 99, 132, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                plugins: {
                    legend: {
                        position: 'bottom',
                    }
                },
                responsive: false,  // On désactive pour garder la taille fixe
                maintainAspectRatio: false,
            }
        });
    });
</script>

{% endblock %}