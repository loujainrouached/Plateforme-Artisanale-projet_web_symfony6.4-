{% extends 'baseback.html.twig' %}

{% block title %}Gestion des Commentaires{% endblock %}

{% block content %}
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Gestion des Commentaires</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="{{ path('app_comment') }}">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Comment</a>
                </li>
            </ul>
        </div>

        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h4 class="card-title">Liste des Commentaires</h4>
                
            </div>

            <div class="table-responsive">
                <table id="add-row"class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Utilisateur</th>
                            <th>Article</th>
                            <th>Commentaire</th>
                            <th>Date</th>
                                                        <th>Rating</th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for comment in comments %}
                            <tr>
                                <td>{{ comment.id }}</td>
                                <td>{{ comment.user.name ?? 'Utilisateur anonyme' }}</td>
                                <td>{{ comment.article.titre }}</td>
                                <td>{{ comment.contenuComment|slice(0, 30) ~ '...' }}</td>
                                <td>{{ comment.dateCom|date('Y-m-d H:i') }}</td>
                                                                <td>{{ comment.rating}}</td>

                                <td class="text-center">
                                    <div class="d-flex gap-2">
                                        <!-- Bouton Modifier -->
                                       

                                        <!-- Bouton Supprimer -->
                                      <form action="{{ path('delete_comment', {'id': comment.id}) }}" >
            <button type="submit"
                    class="btn btn-link btn-danger"
                    
            >
                <i class="fa fa-times"></i>
            </button>
        </form>

                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">Aucun commentaire trouv√©</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}