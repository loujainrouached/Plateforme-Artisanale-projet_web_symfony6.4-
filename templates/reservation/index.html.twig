{% extends 'base.html.twig' %}

{% block title %}
    Register for {{ workshop.title }}
{% endblock %}

{% block body %}


<!-- search area -->
	<div class="search-area">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<span class="close-btn"><i class="fas fa-window-close"></i></span>
					<div class="search-bar">
						<div class="search-bar-tablecell">
							<h3>Search For:</h3>
							<input type="text" placeholder="Keywords">
							<button type="submit">Search <i class="fas fa-search"></i></button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end search arewa -->
	
	<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						     <p>Join us for an exciting experience, we are waiting for you!</p>

						<h1>Register Now</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
<!-- Register for Workshop Section -->
<div class="checkout-section mt-150 mb-150">
    <div class="container">
        <div class="row justify-content-start"> <!-- Changed to justify-content-start for left alignment -->
            <div class="col-lg-8">
                <div class="checkout-accordion-wrap">
                    <div class="accordion" id="accordionExample">
                        
                        <!-- Workshop Details -->
                        <div class="card single-accordion">
                            <div class="card-header" id="headingOne">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        Workshop Details
                                    </button>
                                </h5>
                            </div>
                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                                <div class="card-body">
                                    <!-- Enhanced Workshop Image -->
                                    <div class="latest-news-bg mb-4" style="background-image: url('{{ asset(workshop.image) }}'); height: 300px; background-size: cover; background-position: center; border-radius: 10px;"></div>
                                    
                                    <!-- Workshop Title -->
                                    <h1 class="mb-3" style="font-size: 2.5rem; font-weight: bold; color: #333;">{{ workshop.title }}</h1>
                                    
                                    <!-- Workshop Description -->
                                    <p class="text-muted" style="font-size: 1.1rem; line-height: 1.6;">{{ workshop.description }}</p>
                                </div>
                            </div>
                        </div>

                        <!-- Reservation Form -->
                        <div class="card single-accordion">
                            <div class="card-header" id="headingTwo">
                                <h5 class="mb-0">
                                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        Reservation Form
                                    </button>
                                </h5>
                            </div>
                            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                                <div class="card-body">
                                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                    
                                    <div class="mb-3">
                                        {{ form_label(form.seatsReserved, 'Number of Seats', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                        {{ form_widget(form.seatsReserved, {'attr': {'class': 'form-control', 'min': '1', 'max': '5'}}) }}
                                        {{ form_errors(form.seatsReserved) }}
                                    </div>
                                    
                                    <div class="mb-3">
                                        {{ form_label(form.notes, 'Notes (Optional)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                        {{ form_widget(form.notes, {'attr': {'class': 'form-control', 'placeholder': 'Max 30 characters'}}) }}
                                        {{ form_errors(form.notes) }}
                                    </div>
                                    
                                    <div class="d-flex justify-content-between">
                                        <a href="{{ path('workshop_detail') }}" class="btn btn-outline-dark">
                                            <i class="fas fa-arrow-left"></i> Back
                                        </a>
                                        <button type="submit" class="btn btn-dark">
                                            <i class="fas fa-check"></i> Confirm Reservation
                                        </button>
                                    </div>
                                    
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
              <!-- Sidebar (New Section) -->
        <div class="col-lg-4">
            <div class="sidebar">
                <div class="card mb-4">
                    <div class="card-body">
                        <h3 class="card-title">All Types of Workshops</h3>
                        <ul class="list-unstyled">
                            <li>Sculpture</li>
                            <li>Painting</li>
                            <li>Cooking</li>

                        </ul>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">What About Us?</h3>
                        <p>We offer high-quality workshops tailored to your interests. Join us today and learn from experts!</p>
                        <a href="{{ path('workshop_detail') }}"class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
        </div>

        </div>
        
    </div>
</div>
{% endblock %}
