<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up</title>
    <link rel="stylesheet" href="style.css">
    
	<link rel="stylesheet" href="{{asset('assets/front-office/assets/css/login.css')}}">
</head>
<body>
    <div class="container">
        <div class="image-container"></div>
        <div class="form-container">
           
                <h1>Create Account</h1>
                <div class="social-container">
                    <a href="#" class="social"><ion-icon name="logo-facebook"></ion-icon></a>
                    <a href="#" class="social"><ion-icon name="logo-google"></ion-icon></a>
                    <a href="#" class="social"><ion-icon name="logo-linkedin"></ion-icon></a>
                </div>
              <span>or use your email for registration</span>
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="form-holder">
    {{ form_widget(form.name, {'attr': {'class': 'input', 'placeholder': 'Name'}}) }}
    {% for error in form.name.vars.errors %}
        <small class="error-msg">{{ error.message }}</small>
    {% endfor %}

    {{ form_widget(form.lastname, {'attr': {'class': 'input', 'placeholder': 'Last Name'}}) }}
    {% for error in form.lastname.vars.errors %}
        <small class="error-msg">{{ error.message }}</small>
    {% endfor %}

    {{ form_widget(form.roles, {'attr': {'class': 'input select-input'}}) }}
    {% for error in form.roles.vars.errors %}
        <small class="error-msg">{{ error.message }}</small>
    {% endfor %}

    {{ form_widget(form.password, {'attr': {'class': 'input', 'placeholder': 'Password'}}) }}
    {% for error in form.password.vars.errors %}
        <small class="error-msg">{{ error.message }}</small>
    {% endfor %}

    {{ form_widget(form.confirmPassword, {'attr': {'class': 'input', 'placeholder': 'Confirm Password'}}) }}
    {% for error in form.confirmPassword.vars.errors %}
        <small class="error-msg">{{ error.message }}</small>
    {% endfor %}

    {{ form_widget(form.email, {'attr': {'class': 'input', 'placeholder': 'Email'}}) }}
    {% for error in form.email.vars.errors %}
        <small class="error-msg">{{ error.message }}</small>
    {% endfor %}

    <div style="display: none;">
        {{ form_widget(form.dateCreation) }}
    </div>
</div>

<button class="submit-btn">Sign up</button>
{{ form_end(form) }}
<style>
    .error-msg {
        font-size: 0.8em;      /* Smaller font size */
        color: #ff5555;        /* A bright red color */
        margin-top: 2px;       /* Optional: add a little space above the error */
        display: block;        /* Ensure each error is on its own line */
    }
</style>
