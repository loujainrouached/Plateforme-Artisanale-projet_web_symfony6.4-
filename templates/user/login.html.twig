 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up</title>
    <link rel="stylesheet" href="style.css">
    
	<link rel="stylesheet" href="{{asset('assets/front-office/assets/css/login.css')}}">
</head>
<body>
    <div class="container">
        <div class="image-container"></div>
        <div class="form-container">
           
                <h1>Sign in</h1>
                <div class="social-container">
                    <a href="#" class="social"><ion-icon name="logo-facebook"></ion-icon></a>
                    <a href="#" class="social"><ion-icon name="logo-google"></ion-icon></a>
                    <a href="#" class="social"><ion-icon name="logo-linkedin"></ion-icon></a>
                </div>
                <span>or use your email for connection</span>


   <form action="{{ path('login') }}" method="post" novalidate>
    <div class="form-holder">
        <!-- Remove raw printing of the token and use a hidden field instead -->
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <!-- Username & Password fields -->
        <input type="email" name="email" placeholder="Email" >
        <input type="password" name="password" placeholder="Password" >

        

  <!-- Add reCAPTCHA -->
{#     <div class="g-recaptcha" data-sitekey="{{ ('recaptcha.site_key') }}"></div>
 #}
{# 
    <div class="g-recaptcha" data-sitekey="{{ recaptcha_site_key }}"></div> #}
    </div>
    

{#   {% if app.session.get('banned') %}
                <div class="alert alert-danger">
                    Your account has been banned. Please contact support.
                </div>
            {% endif %} #}
            
     {#        {% if error %}
    <div class="alert alert-danger">
        {{ error }}
    </div>
{% endif %}
 #}

            <!-- Displaying other errors like invalid credentials -->
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}

            {% if error %}
                <p class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            {% endif %}

    <button class="submit-btn">Sign in</button>

   
</form>
 <div class="extra-links">
    <a href="{{ path('app_forgot_password_request') }}" class="forgot-password">
        Forgot Password?
    </a>
    <a href="{{ path('add_user') }}" class="sign-up">Sign Up</a>
</div>


<script src="https://www.google.com/recaptcha/api.js" async defer></script>
