{% extends 'base.html.twig' %}

{% block title %}Hello ReclamationController!{% endblock %}



{% block stylesheets %}
    {{ parent() }}
    <style>
   .custom-submit-button {
    background-color: #d8a573; /* Default tan color */
    color: black;
    border: none;
    font-weight: bold;
    padding: 10px 20px;
    border-radius: 25px;
    font-size: 16px;
    text-transform: uppercase;
    cursor: pointer;
    transition: background-color 0.3s ease, color 0.3s ease;
    width: auto;
}

/* Hover effect: Dark navy background with tan text */
.custom-submit-button:hover {
    background-color: #071920; /* Dark navy color */
    color: #d8a573; /* Tan text */
}

.form-error {
    color: red; /* Makes error messages red */
    font-size: 14px;
    font-weight: bold;
    margin-top: 5px;
}

    </style>
{% endblock %}


{% block body %}
<!-- search area -->
	<div class="search-area">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<span class="close-btn"><i class="fas fa-window-close"></i></span>
					<div class="search-bar">
						<div class="search-bar-tablecell">
							<h3>Search For:</h3>
							<input type="text" placeholder="Keywords">
							<button type="submit">Search <i class="fas fa-search"></i></button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end search arewa -->
	
	<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Get 24/7 Support</p>
						<h1>Contact us</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- contact form -->
	<div class="contact-from-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 mb-5 mb-lg-0">
					<div class="form-title">
						<h2>How Can We Help You?</h2>
