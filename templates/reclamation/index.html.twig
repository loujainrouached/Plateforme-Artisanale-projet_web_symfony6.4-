    <div class="form-error">{{ form_errors(form.message) }}</div> {# Error message inside a styled div #}

    </p>

    <p>
{{ form_widget(form.submit, {'attr': {'class': 'custom-submit-button'}}) }}
    </p>

{{ form_end(form) }}


					</div>
				</div>
				<div class="col-lg-4">
					<div class="contact-form-wrap">
