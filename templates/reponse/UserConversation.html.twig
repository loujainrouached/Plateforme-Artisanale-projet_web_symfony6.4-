function toggleEdit(messageId) {
    const messageContainer = document.getElementById(messageId);
    const messageText = messageContainer.querySelector('.message-text');
    const editForm = messageContainer.querySelector('.edit-form');
    
    messageText.style.display = 'none';
    editForm.style.display = 'block';
}





async function saveEdit(messageId) {
    const messageContainer = document.getElementById(messageId);
    const messageText = messageContainer.querySelector('.message-text');
    const editForm = messageContainer.querySelector('.edit-form');
    const textarea = editForm.querySelector('textarea');
    const loadingSpinner = messageContainer.querySelector('.loading-spinner');
    
    try {
        // Get the message content and validate it
        const messageContent = textarea.value.trim();
        
        // Check for empty message
        if (!messageContent) {
            alert('Message cannot be empty');
            return;
        }
        
        if (loadingSpinner) loadingSpinner.style.display = 'block';
        
        const id = messageId.replace('message-', '');
        
        const requestData = {
            message: messageContent
        };
        
        const response = await fetch(`/message/edit/${id}`, {
            method: 'POST',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(requestData)
        });

        const responseText = await response.text();
        
        let data;
        try {
            data = JSON.parse(responseText);
        } catch (e) {
            console.error('Failed to parse response as JSON:', responseText);
            throw new Error('Server returned invalid JSON');
        }
        
        if (!response.ok) {
            throw new Error(data.error || `Server error: ${response.status}`);
        }

        messageText.textContent = data.message;
        messageText.style.display = 'block';
        editForm.style.display = 'none';
        
    } catch (error) {
        console.error('Error details:', error);
        alert(`Failed to save message: ${error.message}`);
    } finally {
        if (loadingSpinner) loadingSpinner.style.display = 'none';
    }
}

